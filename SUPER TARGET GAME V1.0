                timerDisplay.textContent = timeLeft;
                
                // Increase level every 10 seconds
                const newLevel = Math.floor((30 - timeLeft) / 10) + 1;
                if (newLevel > level) {
                    level = newLevel;
                    levelDisplay.textContent = `Level: ${level}`;
                    showSpecialText(`LEVEL ${level}!`, gameArea, '#4cc9f0');
                }
                
                if (timeLeft <= 0) {
                    endGame();
                }
            }, 1000);
            
            // Start spawning targets
            gameInterval = setInterval(function() {
                spawnTarget();
                
                // Random chance to spawn power-up (15% chance)
                if (Math.random() < 0.15) {
                    spawnPowerUp();
                }
            }, 1000 - (level * 50)); // Spawn faster as level increases
            
            // Spawn first target immediately
            spawnTarget();
            spawnTarget();
            
            // Increment total games
            totalGames++;
            localStorage.setItem('totalGames', totalGames);
            totalGamesDisplay.textContent = totalGames;
        }
        
        // Spawn a new target
        function spawnTarget() {
            if (!isGameRunning) return;
            
            // Higher levels have more chance for special targets
            let availableTargets = targetTypes;
            if (level > 3) {
                availableTargets = [...targetTypes, ...targetTypes.slice(4)];
            }
            
            const targetType = availableTargets[Math.floor(Math.random() * availableTargets.length)];
            
            const target = document.createElement('div');
            target.className = `target ${targetType.behavior} ${targetType.shape}`;
            
            // Random position within game area
            const maxX = gameArea.offsetWidth - targetType.size;
            const maxY = gameArea.offsetHeight - targetType.size;
            
            const randomX = Math.floor(Math.random() * maxX);
            const randomY = Math.floor(Math.random() * maxY);
            
            target.style.left = `${randomX}px`;
            target.style.top = `${randomY}px`;
            target.style.width = `${targetType.size}px`;
            target.style.height = `${targetType.size}px`;
            target.style.backgroundColor = targetType.color;
            target.textContent = targetType.symbol;
            
            // Store target data
            target.dataset.points = targetType.points;
            target.dataset.behavior = targetType.behavior;
            
            // Click event
            target.addEventListener('click', function() {
                if (!isGameRunning) return;
                
                // Add to score (multiplied by combo and potential multiplier)
                let points = parseInt(this.dataset.points) * combo;
                if (multiplierActive) {
                    points *= 2;
                }
                score += points;
                
                // Increase combo count
                comboCount++;
                updateCombo();
                
                // Increment total targets
                totalTargets++;
                localStorage.setItem('totalTargets', totalTargets);
                totalTargetsDisplay.textContent = totalTargets;
                
                // Create particles
                createParticles(this);
                
                // Show combo text if applicable
                if (combo > 1 || multiplierActive) {
                    showComboText(this, points);
                }
                
                // Special effect for spinning targets
                if (this.dataset.behavior === 'spinning') {
                    showSpecialText('PERFECT!', this, '#f72585');
                }
                
                updateDisplays();
                
                // Remove target with animation
                this.style.transform = 'scale(1.5)';
                this.style.opacity = '0';
                setTimeout(() => {
                    if (this.parentNode) {
                        gameArea.removeChild(this);
                    }
                }, 200);
            });
            
            // Target disappears after its lifetime if not clicked
            setTimeout(() => {
                if (target.parentNode) {
                    // Fade out animation
                    target.style.transition = 'opacity 0.5s ease';
                    target.style.opacity = '0';
                    setTimeout(() => {
                        if (target.parentNode) {
                            gameArea.removeChild(target);
                        }
                    }, 500);
                }
            }, targetType.lifetime);
            
            gameArea.appendChild(target);
            
            // Bounce-in animation
            target.style.transform = 'scale(0)';
            target.style.transition = 'transform 0.3s ease-out';
            setTimeout(() => {
                target.style.transform = 'scale(1)';
            }, 10);
        }
        
        // Spawn a power-up
        function spawnPowerUp() {
            if (!isGameRunning) return;
            
            // Higher levels have more chance for rare power-ups
            let availablePowerUps = powerUps;
            if (level > 2) {
                availablePowerUps = [...powerUps, powerUps[3]]; // Extra chance for multiplier
            }
            if (level > 4) {
                availablePowerUps = [...availablePowerUps, powerUps[4]]; // Extra chance for nuke
            }
            
            const powerUp = availablePowerUps[Math.floor(Math.random() * availablePowerUps.length)];
            
            const element = document.createElement('div');
            element.className = 'power-up';
            
            // Random position
            const maxX = gameArea.offsetWidth - 40;
            const maxY = gameArea.offsetHeight - 40;
            
            const randomX = Math.floor(Math.random() * maxX);
            const randomY = Math.floor(Math.random() * maxY);
            
            element.style.left = `${randomX}px`;
            element.style.top = `${randomY}px`;
            element.style.backgroundColor = powerUp.color;
            element.textContent = powerUp.icon;
            
            // Store power-up data
            element.dataset.type = powerUp.type;
            element.dataset.name = powerUp.name;
            
            // Click event
            element.addEventListener('click', function() {
                if (!isGameRunning) return;
                
                // Apply power-up effect
                switch(this.dataset.type) {
                    case 'time':
                        timeLeft += 5;
                        break;
                    case 'combo':
                        combo = 2;
                        comboCount = 0;
                        updateCombo();
                        break;
                    case 'points':
                        score += 50;
                        break;
                    case 'multiplier':
                        activateMultiplier();
                        break;
                    case 'nuke':
                        nukeAllTargets();
                        break;
                }
                
                // Show achievement
                showAchievement(this.dataset.name);
                
                // Create special particles
                createParticles(this, true);
                
                // Show effect text
                showEffectText(this, powerUp.effect);
                
                updateDisplays();
                
                // Remove power-up
                this.style.transform = 'scale(1.5)';
                this.style.opacity = '0';
                setTimeout(() => {
                    if (this.parentNode) {
                        gameArea.removeChild(this);
                    }
                }, 200);
            });
            
            // Power-up disappears after 5 seconds
            setTimeout(() => {
                if (element.parentNode) {
                    element.style.transition = 'opacity 0.5s ease';
                    element.style.opacity = '0';
                    setTimeout(() => {
                        if (element.parentNode) {
                            gameArea.removeChild(element);
                        }
                    }, 500);
                }
            }, 5000);
            
            gameArea.appendChild(element);
        }
        
        // Activate score multiplier
        function activateMultiplier() {
            if (multiplierActive) return;
            
            multiplierActive = true;
            multiplierDisplay.style.display = 'block';
            
            // Show notification
            showSpecialText('2x MULTIPLIER!', gameArea, '#f8961e');
            
            // Set timeout for multiplier
            clearTimeout(multiplierTimeout);
            multiplierTimeout = setTimeout(() => {
                multiplierActive = false;
                multiplierDisplay.style.display = 'none';
                showSpecialText('MULTIPLIER ENDED', gameArea, '#f72585');
            }, 10000);
        }
        
        // Destroy all targets
        function nukeAllTargets() {
            const targets = document.querySelectorAll('.target');
            let pointsEarned = 0;
            
            targets.forEach(target => {
                pointsEarned += parseInt(target.dataset.points) * combo;
                
                // Create explosion effect
                createParticles(target, true);
                
                // Remove target
                target.style.transform = 'scale(1.5)';
                target.style.opacity = '0';
                setTimeout(() => {
                    if (target.parentNode) {
                        gameArea.removeChild(target);
                    }
                }, 200);
            });
            
            // Add to score
            score += pointsEarned;
            showSpecialText(`+${pointsEarned}`, gameArea, '#f72585');
            updateDisplays();
        }
        
        // Show achievement badge
        function showAchievement(name) {
            achievementBadge.innerHTML = `<i class="fas fa-trophy"></i> Achievement: ${name}!`;
            achievementBadge.classList.add('show');
            
            setTimeout(() => {
                achievementBadge.classList.remove('show');
            }, 3000);
        }
        
        // Create particles effect
        function createParticles(element, isPowerUp = false) {
            const rect = element.getBoundingClientRect();
            const centerX = rect.left + rect.width / 2;
            const centerY = rect.top + rect.height / 2;
            
            const particleCount = isPowerUp ? 30 : 15;
            const colors = isPowerUp 
                ? ['#4cc9f0', '#f72585', '#f8961e', '#4ad66d', '#b5179e', '#7209b7']
                : [element.style.backgroundColor];
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = `${centerX}px`;
                particle.style.top = `${centerY}px`;
                particle.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                
                // Random size
                const size = Math.random() * 8 + 4;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                // Random animation
                const angle = Math.random() * Math.PI * 2;
                const velocity = Math.random() * 5 + 2;
                const distance = Math.random() * 50 + 30;
                
                document.body.appendChild(particle);
                
                // Animate particle
                const startTime = Date.now();
                const duration = Math.random() * 1000 + 500;
                
                function animateParticle() {
                    const elapsed = Date.now() - startTime;
                    const progress = elapsed / duration;
                    
                    if (progress >= 1) {
                        particle.remove();
                        return;
                    }
                    
                    const x = centerX + Math.cos(angle) * distance * progress;
                    const y = centerY + Math.sin(angle) * distance * progress;
                    const opacity = 1 - progress;
                    const scale = 1 - progress * 0.5;
                    
                    particle.style.transform = `translate(-50%, -50%) scale(${scale})`;
                    particle.style.left = `${x}px`;
                    particle.style.top = `${y}px`;
                    particle.style.opacity = opacity;
                    
                    requestAnimationFrame(animateParticle);
                }
                
                requestAnimationFrame(animateParticle);
            }
        }
        
        // Show combo text
        function showComboText(element, points) {
            const rect = element.getBoundingClientRect();
            const centerX = rect.left + rect.width / 2;
            const centerY = rect.top + rect.height / 2;
            
            const comboText = document.createElement('div');
            comboText.className = 'combo';
            comboText.textContent = `+${points}`;
            comboText.style.left = `${centerX}px`;
            comboText.style.top = `${centerY}px`;
            
            if (multiplierActive) {
                comboText.style.color = '#f8961e';
                comboText.textContent = `+${points} (2x!)`;
            }
            
            document.body.appendChild(comboText);
            
            // Remove after animation
            setTimeout(() => {
                comboText.remove();
            }, 1000);
        }
        
        // Show special effect text
        function showSpecialText(text, element, color) {
            const rect = element.getBoundingClientRect();
            const centerX = rect.left + (rect.width / 2);
            const centerY = rect.top + (rect.height / 2);
            
            const effectText = document.createElement('div');
            effectText.className = 'special-text';
            effectText.textContent = text;
            effectText.style.color = color;
            effectText.style.left = `${centerX}px`;
            effectText.style.top = `${centerY}px`;
            
            document.body.appendChild(effectText);
            
            // Remove after animation
            setTimeout(() => {
                effectText.remove();
            }, 1000);
        }
        
        // Show power-up effect text
        function showEffectText(element, effect) {
            const rect = element.getBoundingClientRect();
            const centerX = rect.left + rect.width / 2;
            const centerY = rect.top + rect.height / 2;
            
            const effectText = document.createElement('div');
            effectText.className = 'combo';
            effectText.textContent = effect;
            effectText.style.fontSize = '1.4rem';
            effectText.style.color = element.style.backgroundColor;
            effectText.style.left = `${centerX}px`;
            effectText.style.top = `${centerY - 20}px`;
            
            document.body.appendChild(effectText);
            
            // Remove after animation
            setTimeout(() => {
                effectText.remove();
            }, 1000);
        }
        
        // Update combo system
        function updateCombo() {
            // Reset combo timeout
            clearTimeout(comboTimeout);
            
            // Update combo based on count
            if (comboCount >= 10) {
                combo = 3;
            } else if (comboCount >= 5) {
                combo = 2;
            } else {
                combo = 1;
            }
            
            // Update combo display
            comboDisplay.textContent = `${combo}x`;
            comboCountDisplay.textContent = `${comboCount} hits`;
            
            // Update combo meter
            const progress = comboCount >= 10 ? 100 : 
                           comboCount >= 5 ? (comboCount - 5) * 20 : 
                           comboCount * 20;
            comboProgress.style.width = `${progress}%`;
            
            // Set combo timeout (2 seconds to keep combo)
            comboTimeout = setTimeout(() => {
                comboCount = 0;
                combo = 1;
                updateCombo();
            }, 2000);
        }
        
        // Update all displays
        function updateDisplays() {
            scoreDisplay.textContent = score;
            timerDisplay.textContent = timeLeft;
        }
        
        // End the game
        function endGame() {
            isGameRunning = false;
            clearInterval(gameInterval);
            clearInterval(timerInterval);
            clearTimeout(comboTimeout);
            clearTimeout(multiplierTimeout);
            multiplierActive = false;
            multiplierDisplay.style.display = 'none';
            
            // Update high score
            if (score > highScore) {
                highScore = score;
                localStorage.setItem('highScore', highScore);
                highScoreDisplay.textContent = `New High Score: ${highScore}`;
                globalHighScore.textContent = highScore;
                createConfetti();
            } else {
                highScoreDisplay.textContent = `High Score: ${highScore}`;
            }
            
            // Show game over screen
            finalScoreDisplay.textContent = score;
            gameOverScreen.classList.add('show');
        }
        
        // Create confetti effect
        function createConfetti() {
            for (let i = 0; i < 150; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = `${Math.random() * 100}vw`;
                confetti.style.top = '-10px';
                confetti.style.backgroundColor = `hsl(${Math.random() * 360}, 100%, 60%)`;
                confetti.style.transform = `rotate(${Math.random() * 360}deg)`;
                
                // Random shape
                if (Math.random() > 0.5) {
                    confetti.style.borderRadius = '50%';
                } else {
                    confetti.style.width = `${Math.random() * 10 + 5}px`;
                    confetti.style.height = `${Math.random() * 5 + 3}px`;
                }
                
                document.body.appendChild(confetti);
                
                // Animate confetti
                const duration = Math.random() * 3000 + 2000;
                const delay = Math.random() * 500;
                
                setTimeout(() => {
                    confetti.style.opacity = '1';
                    confetti.style.transition = `all ${duration/1000}s ease-out`;
                    
                    setTimeout(() => {
                        confetti.style.top = '100vh';
                        confetti.style.opacity = '0';
                        confetti.style.transform = `rotate(${Math.random() * 360}deg) translateX(${Math.random() * 200 - 100}px)`;
                        
                        // Remove after animation
                        setTimeout(() => {
                            confetti.remove();
                        }, duration);
                    }, 10);
                }, delay);
            }
        }
        
        // Reset game
        function resetGame() {
            endGame();
            score = 0;
            timeLeft = 30;
            combo = 1;
            comboCount = 0;
            level = 1;
            updateDisplays();
            updateCombo();
            levelDisplay.textContent = `Level: ${level}`;
            gameArea.innerHTML = '';
            gameOverScreen.classList.remove('show');
        }
        
        // Play again
        function playAgain() {
            resetGame();
            startGame();
        }
        
        // Initialize the game
        init();
    </script>
</body>
</html>
